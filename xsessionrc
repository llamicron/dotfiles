#!/bin/bash

readonly WALLPAPER_DIR=~/etc/wallpapers

# Load Resources
xrdb -merge .Xresources

# Start udiskie for external media
udiskie &

# Configure monitor layout with arandr
~/.screenlayout/main.sh

# Set wallpaper
feh --bg-scale "$WALLPAPER_DIR/irl/mushroom.jpg"

# Set default terminal to alacritty
terminal = "~/.cargo/bin/alacritty"

# Fire up apps
xscreensaver -no-splash &
if [ -x /usr/bin/nm-applet ]; then
	nm-applet --sm-disable &
fi
# start redshift
redshift &


exec xmonad
